<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>ZRS Test Maps</title>

  <!-- âœ… Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

  <!-- ğŸª„ Favicon & Styles -->
  <link rel="icon" type="image/png" href="/images/logo.png">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- ğŸ§­ Top Header Bar -->
  <header class="top-header">
    <div class="header-content">
      <img src="/images/logo.png" alt="ZRS Logo" class="logo">
      <h1>ZRS Test Maps</h1>
      <div class="header-nav">
        <button id="theme-toggle" class="theme-toggle">ğŸŒ™ Dark</button>
      </div>
    </div>
  </header>

  <% if (isAdmin) { %>
    <div class="admin-banner">
      ğŸ”‘ <strong>Admin Mode Active</strong> â€” Upload & Delete enabled
    </div>
  <% } %>

  <main>
    <h2>ğŸ§ª Mapper Test Maps</h2>

    <!-- ğŸ“¤ Upload Form (Admin Only) -->
    <% if (isAdmin) { %>
      <section class="upload">
        <h3>ğŸ“¤ Upload New Test Map</h3>
        <form action="/upload" method="POST" enctype="multipart/form-data" class="upload-form">
          <input type="file" name="mapfile" accept=".zip" required><br>

          <!-- ğŸ§ Mapper Selection -->
          <label for="mapper">ğŸ§ Mapper:</label>
          <select name="mapper" id="mapper" required>
            <% if (mappers.length === 0) { %>
              <option value="" disabled>No mapper folders found â€” create subfolders in /public/maps</option>
            <% } else { %>
              <% mappers.forEach(function(mapper) { %>
                <option value="<%= mapper %>"><%= mapper %></option>
              <% }) %>
            <% } %>
          </select><br>

          <input type="password" name="pwd" placeholder="Upload Password" required>
          <button type="submit">Upload</button>
        </form>
      </section>
    <% } %>

    <!-- ğŸ—‚ Mapper Listings -->
    <% mappers.forEach(function(mapper) { %>
      <section class="mapper-section">
        <h3 class="mapper-header">ğŸ§ <%= mapper %></h3>
        <ul class="map-list">
          <% if (mapperMaps[mapper].length === 0) { %>
            <li><em>No maps for this mapper yet.</em></li>
          <% } else { %>
            <% mapperMaps[mapper].forEach(function(file) { %>
              <li class="map-item">
                <strong><%= file.songName %></strong><br>

                <!-- ğŸ’¾ Download ZIP -->
                <a href="<%= file.url %>" class="btn">ğŸ’¾ Download ZIP</a>

                <!-- ğŸ“² MBF Install (Quest) -->
                <a href="bmbf://playlist?url=<%= baseUrl + file.playlistUrl %>" class="btn">ğŸ“² Install via MBF</a>

                
                <% if (isAdmin) { %>
                  <form action="/delete" method="POST" style="display:inline;">
                    <input type="hidden" name="mapper" value="<%= mapper %>">
                    <input type="hidden" name="filename" value="<%= file.filename %>">
                    <input type="password" name="pwd" placeholder="Password" required>
                    <button type="submit" class="delete-btn" onclick="return confirm('Delete this map?')">ğŸ—‘ï¸</button>
                  </form>
                <% } %>
              </li>
            <% }) %>
          <% } %>
        </ul>
      </section>
    <% }) %>
  </main>

  <!-- ğŸŒ™ Dark Mode Toggle Script -->
  <script>
    const toggleBtn = document.getElementById('theme-toggle');
    const currentTheme = localStorage.getItem('theme');

    document.body.classList.add('fade-theme');
    setTimeout(() => document.body.classList.remove('fade-theme'), 100);

    if (currentTheme === 'dark') {
      document.body.classList.add('dark');
      toggleBtn.textContent = 'â˜€ï¸ Light';
    }

    toggleBtn.addEventListener('click', () => {
      document.body.classList.add('fade-theme');
      setTimeout(() => document.body.classList.remove('fade-theme'), 100);
      document.body.classList.toggle('dark');
      const isDark = document.body.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
      toggleBtn.textContent = isDark ? 'â˜€ï¸ Light' : 'ğŸŒ™ Dark';
    });
  </script>
</body>
</html>
