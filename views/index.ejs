<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>ZRS Test Maps</title>

  <!-- âœ… Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

  <!-- ğŸª„ Favicon & Styles -->
  <link rel="icon" type="image/png" href="/images/logo.png">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <!-- ğŸ§­ Top Header Bar -->
  <header class="top-header">
    <div class="header-content">
      <img src="/images/logo.png" alt="ZRS Logo" class="logo">
      <h1>ZRS Test Maps</h1>
      <div class="header-nav">
        <button id="theme-toggle" class="theme-toggle">ğŸŒ™ Dark</button>
      </div>
    </div>
  </header>

  <% if (isAdmin) { %>
    <div class="admin-banner">
      ğŸ”‘ <strong>Admin Mode Active</strong> â€” Upload & Delete enabled
    </div>
  <% } %>

  <h1>ğŸ§ª ZRS Test Maps</h1>

  <!-- ğŸ“œ Global Playlist Download -->
  <section>
    <p>
      <a href="/playlist.bplist" class="playlist-link">ğŸ“œ Download All Maps as Playlist</a>
    </p>
  </section>

  <!-- ğŸ“¤ Upload Form (Admin Only) -->
  <% if (isAdmin) { %>
    <section class="upload">
      <h2>ğŸ“¤ Upload New Test Map</h2>
      <form action="/upload" method="POST" enctype="multipart/form-data" class="upload-form">
        <input type="file" name="mapfile" accept=".zip" required><br>

        <!-- ğŸ§ Dynamic Pack Selection -->
        <label for="pack">ğŸ§ Target Pack:</label>
        <select name="pack" id="pack" required>
          <% if (packs.length === 0) { %>
            <option value="" disabled>No packs found â€” create subfolders in /public/maps</option>
          <% } else { %>
            <% packs.forEach(function(pack) { %>
              <option value="<%= pack %>"><%= pack %></option>
            <% }) %>
          <% } %>
        </select><br>

        <input type="password" name="pwd" placeholder="Upload Password" required>
        <button type="submit">Upload</button>
      </form>
    </section>
  <% } %>

  <!-- ğŸ—‚ Pack Map Listings (Admin Only) -->
  <% if (isAdmin && packs.length > 0) { %>
    <section>
      <h2>ğŸ—‚ Pack Map Management</h2>
      <% packs.forEach(function(pack) { %>
        <h3>ğŸ“ <%= pack %></h3>
        <ul class="map-list">
          <% if (packMaps[pack].length === 0) { %>
            <li><em>No maps in this pack yet.</em></li>
          <% } else { %>
            <% packMaps[pack].forEach(function(file) { %>
              <li>
                ğŸ’¿ <strong><%= file.songName %></strong>
                <form action="/delete" method="POST" style="display:inline;">
                  <input type="hidden" name="filename" value="<%= file.filename %>">
                  <input type="hidden" name="pack" value="<%= pack %>">
                  <input type="password" name="pwd" placeholder="Password" required>
                  <button type="submit" class="delete-btn" onclick="return confirm('Delete this map?')">ğŸ—‘ï¸ Delete</button>
                </form>
              </li>
            <% }) %>
          <% } %>
        </ul>
      <% }) %>
    </section>
  <% } %>

  <!-- ğŸ“š Playlist Packs -->
  <% if (packs.length > 0) { %>
    <section>
      <h2>ğŸ“š Available Packs</h2>
      <ul>
        <% packs.forEach(function(pack) { %>
          <li>
            ğŸ—‚ <strong><%= pack %></strong> â€” 
            <a href="/playlist/<%= pack %>.bplist">ğŸ“œ Playlist</a>
          </li>
        <% }) %>
      </ul>
    </section>
  <% } %>

<script>
  // ğŸŒ™ Dark Mode Toggle with Fade Animation
  const toggleBtn = document.getElementById('theme-toggle');
  const currentTheme = localStorage.getItem('theme');

  // Temporarily disable transitions during load to avoid flash
  document.body.classList.add('fade-theme');
  setTimeout(() => document.body.classList.remove('fade-theme'), 100);

  if (currentTheme === 'dark') {
    document.body.classList.add('dark');
    toggleBtn.textContent = 'â˜€ï¸ Light';
  }

  toggleBtn.addEventListener('click', () => {
    document.body.classList.add('fade-theme'); // enable smooth transition
    setTimeout(() => document.body.classList.remove('fade-theme'), 100);

    document.body.classList.toggle('dark');
    const isDark = document.body.classList.contains('dark');
    localStorage.setItem('theme', isDark ? 'dark' : 'light');
    toggleBtn.textContent = isDark ? 'â˜€ï¸ Light' : 'ğŸŒ™ Dark';
  });
</script>

</body>
</html>
